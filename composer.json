{
  "name": "jeanlucas/acme-basket",
  "description": "Proof of concept for Acme Widget Co basket system.",
  "type": "project",
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Acme\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Acme\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse src tests --level=5"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
